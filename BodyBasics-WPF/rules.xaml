<Window x:Class="Microsoft.Samples.Kinect.BodyBasics.rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.BodyBasics"
        mc:Ignorable="d"
        Title="rules" Height="400" Width="400">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Text="Player Name" />
            <TextBox Name ="name" HorizontalAlignment="Center" Width="100"/>
            <TextBlock Text="1. You must grab the cat to get a point" TextWrapping="Wrap"/>
            <TextBlock Text="2. DO NOT Grab Bill Gates" TextWrapping="Wrap"/>
            <TextBlock Text="3. You have 30 seconds to grab as many cats as you can" TextWrapping="Wrap"/>
            <TextBlock TextWrapping="Wrap"><Run Text="4. You score triple for cats on the bottom since you have to bend over to pick them up. "/><LineBreak/><Run/></TextBlock>
            <TextBlock Text="5. HAVE FUN!" TextWrapping="Wrap"/>
            <Button Content="CATCH THE CATS" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
